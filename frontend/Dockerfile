# Stage 1: Build stage named "builder"
FROM node:18-alpine AS builder
WORKDIR /app

# Copy and install deps
COPY package*.json ./
RUN npm install

# Copy source
COPY . .

# Build with build-time variables (VITE_...)
# Accept build-time variables
ARG VITE_API_URL
ARG VITE_COGNITO_USER_POOL_ID
ARG VITE_COGNITO_CLIENT_ID
ARG VITE_AWS_REGION
ARG VITE_COGNITO_DOMAIN
ARG VITE_COGNITO_REDIRECT_URI
ARG VITE_COGNITO_RESPONSE_TYPE
ARG VITE_OHIF_URL
ARG VITE_GUEST_USERNAME
ARG VITE_GUEST_PASSWORD
ARG VITE_COGNITO_AUTHORITY

# Make them available to Vite
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_COGNITO_USER_POOL_ID=$VITE_COGNITO_USER_POOL_ID
ENV VITE_COGNITO_CLIENT_ID=$VITE_COGNITO_CLIENT_ID
ENV VITE_AWS_REGION=$VITE_AWS_REGION
ENV VITE_COGNITO_DOMAIN=$VITE_COGNITO_DOMAIN
ENV VITE_COGNITO_REDIRECT_URI=$VITE_COGNITO_REDIRECT_URI
ENV VITE_COGNITO_RESPONSE_TYPE=$VITE_COGNITO_RESPONSE_TYPE
ENV VITE_OHIF_URL=$VITE_OHIF_URL
ENV VITE_GUEST_USERNAME=$VITE_GUEST_USERNAME
ENV VITE_GUEST_PASSWORD=$VITE_GUEST_PASSWORD
ENV VITE_COGNITO_AUTHORITY=$VITE_COGNITO_AUTHORITY

RUN npm run build

# Stage 2: Serve static files
FROM nginx:alpine

# Copy built files from the builder stage to the nginx html directory
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf